<div align="right">
  <%= link_to '<font size="4"><b>戻る</b></font>',
    :action => :monthly, :id => @siten.id, :month => @serial %>
</div>
<hr>

<% form_for(@keiri, :url => {:action => :kupdate, :id => @siten.id}) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :siten_id, :value => @siten.id %>
  <%= f.hidden_field :month, :value => @serial %>

  <p>
    <%= f.submit '更新' %>
  </p>

  <table width="400px">
    <tr>
      <th colspan="2"></th>
      <th align="center">経理値</th>
    </tr>
    <tr>
      <th align="left" colspan="3">利益</th>
    </tr>
    <% Plbase::RIEKI_INPUT.each do |ip| %>
      <%= render :partial => 'zedit_item', :locals => {:name => ip[0],
      :form => f, :item => ip[1].to_sym} %>
    <% end %>
    <% Plbase::RIEKI_VIEW.each do |vw| %>
      <%= render :partial => 'zedit_view', :locals => {:name => vw[0],
        :value => @keiri.send(vw[1])} %>
    <% end %>

    <tr>
      <th align="left" colspan="3">費用</th>
    </tr>
    <% Plbase::HIYO_INPUT.each do |ip| %>
      <%= render :partial => 'zedit_item', :locals => {:name => ip[0],
      :form => f, :item => ip[1].to_sym} %>
    <% end %>
    <% Plbase::HIYO_VIEW.each do |vw| %>
      <%= render :partial => 'zedit_view', :locals => {:name => vw[0],
        :value => @keiri.send(vw[1])} %>
    <% end %>

    <tr>
      <th align="left" colspan="3">営業利益</th>
    </tr>
    <% Plbase::EIRI_INPUT.each do |ip| %>
      <%= render :partial => 'zedit_item', :locals => {:name => ip[0],
      :form => f, :item => ip[1].to_sym} %>
    <% end %>
    <% Plbase::EIRI_VIEW.each do |vw| %>
      <%= render :partial => 'zedit_view', :locals => {:name => vw[0],
        :value => @keiri.send(vw[1])} %>
    <% end %>


    <tr>
      <th align="left" colspan="3">経常利益</th>
    </tr>
    <% Plbase::KEIZYO_INPUT.each do |ip| %>
      <%= render :partial => 'zedit_item', :locals => {:name => ip[0],
      :form => f, :item => ip[1].to_sym} %>
    <% end %>
    <% Plbase::KEIZYO_VIEW.each do |vw| %>
      <%= render :partial => 'zedit_view', :locals => {:name => vw[0],
        :value => @keiri.send(vw[1])} %>
    <% end %>

  </table>

  <p>
    <%= f.submit '更新' %>
  </p>

<% end %>
<hr>
